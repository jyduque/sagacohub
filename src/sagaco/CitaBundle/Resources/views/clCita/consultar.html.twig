{% extends '::plantilla.html.twig' %}

{% block id 'rol' %}
    {# Barra de ruta #}
    {% block ruta %}
    <div class="container navbar-blanca">                
        <ul class="breadcrumb-modi">
            <li><a href="#"><small>Inicio</small></a></li>
            <li class="active"><small>Rol</small></li>
        </ul>                              
    </div> 
    {% endblock %}{#-- Fin Barra de ruta --#}
   
    {# Campos de la Forma #}
    {% block twigformulario %}
        <fieldset>
            {# Titulo del requisito #}
            <legend>Listar rol
                <div class="pull-right">
                    <a href="{{ path('pgCita_consultar') }}" class="btn btn-xs" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Crear">
                        <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                    </a>                          
                </div>
            </legend>
            {{ bootstrap_set_style('horizontal') }}

            {#Muestra los campos del formulario#} 
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-condensed">
                    <thead> 
                        <tr>
                            {# sorting of properties based on query components #}
                            <th>{{ knp_pagination_sortable(objPagina, 'Id', 'a.coCita') }}</th>
                            <th{% if objPagina.isSorted('a.coOrientador') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'Orientador', 'a.coOrientador') }}</th>
                            <th{% if objPagina.isSorted('a.coOrientador') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'Persona', 'a.coOrientador') }}</th>
                            <th>F. Creación</th>
                            <th>F. Actualización</th>                                
                        </tr>
                    </thead>
                    <tbody>
                    {% if objPagina.getTotalItemCount == 0 %}
                        <tr class="danger">
                            <td colspan="9" class="text-center error"><strong>No hay resultados</strong></td>
                        </tr>                                  
                    {% endif %}
                    {% for objEntidad in objPagina %}
                        <tr {% if loop.index is odd %}class="color"{% endif %}>
                            <td class="text-right"><a href="{{ path('pgCita_consultar', { 'id': objEntidad.coCita, 'blnBandera': '0'}) }}">{{ objEntidad.coCita }}</a></td>
                            <td>{{ objEntidad.coOrientador }}</td>
                            <td>{{ objEntidad.coArea }}</td>
                            <td>{% if objEntidad.fhCreacion %}{{ objEntidad.fhCreacion|date('d-m-Y H:i:s') }}{% endif %}</td>
                            <td>{% if objEntidad.fhActualizacion %}{{ objEntidad.fhActualizacion|date('d-m-Y H:i:s') }}{% endif %}</td>                            
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="row">                        
                <div class="col-sm-9 col-md-6 col-lg-8">
                    <p> <strong>Resultado: </strong>{{ objPagina.getTotalItemCount }} filas</p>
                </div>
                <div class="col-sm-3 col-md-6 col-lg-4 pull-right">
                    {{ knp_pagination_render(objPagina) }}
                </div>
            </div>                    
        </fieldset>   
    {% endblock %}{#-- Fin Campos de la Forma #}