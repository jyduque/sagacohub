{% extends '::plantilla.html.twig' %}

{% block id 'entrevista' %}
    {# Barra de ruta #}
    {% block ruta %}
    <div class="container navbar-blanca">                
        <ul class="breadcrumb-modi">
            <li><a href="#"><small>Inicio</small></a></li>
            <li class="active"><small>Entrevista</small></li>
        </ul>                              
    </div> 
    {% endblock %}{#-- Fin Barra de ruta --#}
   
    {# Campos de la Forma #}
    {% block twigformulario %}
        <fieldset>
                {# Titulo del requisito #}
                <legend>Listar entrevista
                    <div class="pull-right">
                        <a href="{{ path('pgEntrevista_registrar') }}" class="btn btn-xs" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Crear">
                            <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                        </a>                          
                    </div>
                </legend>
                {{ bootstrap_set_style('horizontal') }}
    
                {#Muestra los campos del formulario#} 
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-condensed">
                            <thead>                            
                                <tr>
                                    {# sorting of properties based on query components #}
                                    <th>{{ knp_pagination_sortable(objPagina, 'Id', 'a.coEntrevista') }}</th>
                                    <th>{% if objPagina.isSorted('a.txMotivoIndividual') %} class="sorted"{% endif %}{{ knp_pagination_sortable(objPagina, '¿Qué lo motivó a solicitar la Atención Individual?', 'a.nbGrupoRol') }}</th>
                                    <th>{% if objPagina.isSorted('a.txMotivoEntrevista') %} class="sorted"{% endif %}{{ knp_pagination_sortable(objPagina, '¿Qué espera con la atención que solicita?', 'a.nbGrupoRol') }}</th>
                                    <th>{% if objPagina.isSorted('a.inSoliciEspontanea') %} class="sorted"{% endif %}{{ knp_pagination_sortable(objPagina, '¿Espontánea? (1=si y 0=no)', 'a.nbGrupoRol') }}</th>
                                    <th>{% if objPagina.isSorted('a.txTratamiento') %} class="sorted"{% endif %}{{ knp_pagination_sortable(objPagina, 'Tratamiento o Recomendaciones', 'a.nbGrupoRol') }}</th>
                                    <th>{% if objPagina.isSorted('a.txObservacion') %} class="sorted"{% endif %}{{ knp_pagination_sortable(objPagina, 'Observaciones', 'a.nbGrupoRol') }}</th>
                                    <th>Acción</th>                                
                                </tr>
                            </thead>
                            <tbody>
                            {% for objEntidad in objPagina %}
                                <tr {% if loop.index is odd %}class="color"{% endif %}>
                                    <td class="text-right"><a href="{{ path('pgEntrevista_mostrar', { 'id': objEntidad.coEntrevista, 'blnBandera': '0'}) }}">{{ objEntidad.coEntrevista }}</a></td>
                                    <td>{{ objEntidad.txMotivoIndividual }}</td>
                                    <td>{{ objEntidad.txMotivoEntrevista }}</td>
                                    <td>{{ objEntidad.inSoliciEspontanea }}</td>
                                    <td>{{ objEntidad.txTratamiento }}</td>
                                    <td>{{ objEntidad.txObservacion }}</td>
                                    <td> 
                                        <a href="{{ path('pgEntrevista_mostrar', { 'id': objEntidad.coEntrevista, 'blnBandera': '0' }) }}" class="btn btn-xs" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Mostrar detalle">
                                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                        </a>                                    
                                        <a href="{{ path('pgEntrevista_editar', { 'id': objEntidad.coEntrevista }) }}" class="btn btn-xs" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Editar">
                                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                        </a>                                 
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="row">                        
                        <div class="col-sm-9 col-md-6 col-lg-8">
                            <p> <strong>Resultado: </strong>{{ objPagina.getTotalItemCount }} filas</p>
                        </div>
                        <div class="col-sm-3 col-md-6 col-lg-4 pull-right">
                            {{ knp_pagination_render(objPagina) }}
                        </div>
                    </div>                    
                </fieldset>   
    {% endblock %}{#-- Fin Campos de la Forma #}