{% extends '::plantilla.html.twig' %}

{% block id 'rol' %}
   
    {% block ruta %}
    <div class="container navbar-blanca">                
        <ul class="breadcrumb-modi">
            <li><a href="#"><small>Inicio</small></a></li>
            <li><a href="{{ path('pgHistorPersona') }}"><small>Expediente</small></a></li>
            <li class="active"><small>Crear</small></li>
        </ul>                              
    </div> 
    {% endblock %}{#-- Fin Barra de ruta --#}
    
    {# Campos de la Forma #}
    {% block twigformulario %}
        
        <fieldset>
            {# Titulo del requisito #}
            <legend>Crear expediente
                <div class="pull-right">
                    <a href="{{ path('pgHistorPersona') }}" class="btn btn-xs" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Regresar al listado">
                        <span class="glyphicon glyphicon-hand-left" aria-hidden="true"></span>
                    </a>                       
                </div>
            </legend>
            {#Muestra los campos del formulario#}   
            
            <div class='form-horizontal'>                
                <div class="row">
                    <div class="col-lg-12">
                        <div class='text-right col-lg-2'>
                            <strong>Nombre y Apellidos</strong>
                        </div>
                        <div class='col-lg-10'>
                            {% if objPersona.inEstudiante == true %}
                                {{ objEstudiante.txPrimerNombre }} {{ objEstudiante.txPrimerApellido }}
                            {% else %}
                                {{ objRecursosH.txPrimerNombre }} {{ objRecursosH.txPrimerApellido }}
                            {% endif %}
                        </div>
                    </div>                    
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class='text-right col-lg-4'>
                            <strong>Cédula</strong>
                        </div>
                        <div class='col-lg-8'>
                            {% if objPersona.inEstudiante == true %}
                                {{ objEstudiante.nuCedula }}
                            {% else %}
                                {{ objRecursosH.nuCedula }}
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class='text-right col-lg-4'>
                            <strong>Nacionalidad</strong>
                        </div>
                        <div class='col-lg-8'>
                            {% if objPersona.inEstudiante == true %}
                                {{ objEstudiante.inNacionalidad }}
                            {% else %}
                                {{ objRecursosH.inNacionalidad }}
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class='text-right col-lg-4'>
                            <strong>Fecha de nacimiento</strong>
                        </div>
                        <div class='col-lg-8'>
                            {% if objPersona.inEstudiante == true %}
                                {{ objEstudiante.feNacimiento|date('d-m-Y') }}
                            {% else %}
                                {{ objRecursosH.feNacimiento|date('d-m-Y') }}
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class='text-right col-lg-4'>
                            <strong>Sexo</strong>
                        </div>
                        <div class='col-lg-8'>
                            {% if objPersona.inEstudiante == true %}
                                {{ objEstudiante.inSexo }}
                            {% else %}
                                {{ objRecursosH.inSexo }}
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class='text-right col-lg-4'>
                            <strong>Teléfono fijo</strong>
                        </div>
                        <div class='col-lg-8'>
                            {% if objPersona.inEstudiante == true %}
                                {{ objEstudiante.txTelefoCasa }}
                            {% else %}
                                {{ objRecursosH.txTelefoHabitacion }}
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class='text-right col-lg-4'>
                            <strong>Teléfono celular</strong>
                        </div>
                        <div class='col-lg-8'>
                            {% if objPersona.inEstudiante == true %}
                                {{ objEstudiante.txTelefoCelular }}
                            {% else %}
                                {{ objRecursosH.txTelefoCelular }}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            {{ form_start(form, { 'style': 'horizontal' }) }}
                {{ form_errors(form, { 'global_errors': true }) }}
                {{ form_row(form._token) }}
                {#<div class="row">
                    <div class="col-lg-4">
                        {{ form_row(form.inEstudia, { 'style': 'horizontal', 'label_col': 4, 'widget_col': 8, 'label': '¿Estudia?', 'align_with_widget': true }) }}
                    </div>
                    <div class="col-lg-8">
                        {{ form_row(form.txEstudiEspecifique, { 'style': 'horizontal', 'label_col': 2, 'widget_col': 10, 'label': 'Especifique' }) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        {{ form_row(form.inTrabaja, { 'style': 'horizontal', 'label_col': 4, 'widget_col': 8, 'label': '¿Trabaja?', 'align_with_widget': true }) }}
                    </div>
                    <div class="col-lg-8">
                        {{ form_row(form.txLugarTrabajo, { 'style': 'horizontal', 'label_col': 2, 'widget_col': 10, 'label': 'Lugar de trabajo' }) }}
                    </div>
                </div>#}
                {{ form_row(form.inEstudia, {'label': '¿Estudia?', 'align_with_widget': true}) }}
                {{ form_row(form.txEstudiEspecifique, {'label': 'Especifique'}) }}
                {{ form_row(form.inTrabaja, {'label': '¿Trabaja?', 'align_with_widget': true}) }}
                {{ form_row(form.txLugarTrabajo, {'label': 'Lugar de trabajo'}) }}
                {{ form_row(form.txDireccion1, {'label': 'Dirección de trabajo'}) }}
                {{ form_row(form.txDireccion2, {'label': 'Dirección de trabajo'}) }}
                {{ form_row(form.inSoliciEspontanea, {'label': 'Solicitud espontánea', 'align_with_widget': true}) }}
                {{ form_row(form.txSugerido, {'label': 'Sugerido por'}) }}
                {{ form_row(form.coOrientador, {'label': 'Docente responsable'}) }}
                {{ form_row(form.txObservacion, {'label': 'Observación'}) }}
                
                <div>
                    <p class="text-left">
                        <small class="text-muted">(</small><small class="text-muted text-danger">*</small><small class="text-muted">) Campos obligatorios</small></p>
                </div>  
            {{ form_end(form) }}                
        </fieldset>         
         
    {% endblock %}{#-- Fin Campos de la Forma #}