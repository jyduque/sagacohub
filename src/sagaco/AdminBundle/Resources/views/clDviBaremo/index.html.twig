{% extends '::plantilla.html.twig' %}

{% block id 'dvibaremo' %}
    {# Barra de ruta #}
    {% block ruta %}
    <div class="container navbar-blanca">                
        <ul class="breadcrumb-modi">
            <li><a href="#"><small>Inicio</small></a></li>
            <li class="active"><small>DVI baremo</small></li>
        </ul>                              
    </div> 
    {% endblock %}{#-- Fin Barra de ruta --#}
   
    {# Campos de la Forma #}
    {% block twigformulario %}
        <fieldset>
                {# Titulo del requisito #}
                <legend>Listar DVI baremo
                    <div class="pull-right">
                        <a href="{{ path('pgDviBaremo_registrar') }}" class="btn btn-xs" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Crear">
                            <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                        </a>                          
                    </div>
                </legend>
                {{ bootstrap_set_style('horizontal') }}
    
                {#Muestra los campos del formulario#} 
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-condensed">
                            <thead>                            
                                <tr>
                                    {# sorting of properties based on query components #}
                                    <th>{{ knp_pagination_sortable(objPagina, 'Id', 'a.coDviBaremo') }}</th>
                                    <th{% if objPagina.isSorted('a.nuDviRespuesta') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'Respuesta', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere1') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 1', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere2') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 2', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere21') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 3', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere4') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 4', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere5') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 5', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere6') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 6', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere7') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 7', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere8') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 8', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere9') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 9', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere10') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 10', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere11') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 11', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere12') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 12', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere13') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 13', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere14') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 14', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere15') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 15', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere16') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 16', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere17') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 17', 'a.nbGrupoRol') }}</th>
                                    <th{% if objPagina.isSorted('a.inIntere18') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'I 18', 'a.nbGrupoRol') }}</th>
                                    <th>F. Creación</th>
                                    <th>F. Actualización</th>
                                    <th>Acción</th>                                
                                </tr>
                            </thead>
                            <tbody>
                            {% for objEntidad in objPagina %}
                                <tr {% if loop.index is odd %}class="color"{% endif %}>
                                    <td class="text-right"><a href="{{ path('pgDviBaremo_mostrar', { 'id': objEntidad.coDviBaremo, 'blnBandera': '0'}) }}">{{ objEntidad.coDviBaremo }}</a></td>
                                    <td>{{ objEntidad.nuDviRespuesta }}</td>
                                    <td>{{ objEntidad.inIntere1 }}</td>
                                    <td>{{ objEntidad.inIntere2 }}</td>
                                    <td>{{ objEntidad.inIntere21 }}</td>
                                    <td>{{ objEntidad.inIntere4 }}</td>
                                    <td>{{ objEntidad.inIntere5 }}</td>
                                    <td>{{ objEntidad.inIntere6 }}</td>
                                    <td>{{ objEntidad.inIntere7 }}</td>
                                    <td>{{ objEntidad.inIntere8 }}</td>
                                    <td>{{ objEntidad.inIntere9 }}</td>
                                    <td>{{ objEntidad.inIntere10 }}</td>
                                    <td>{{ objEntidad.inIntere11 }}</td>
                                    <td>{{ objEntidad.inIntere12 }}</td>
                                    <td>{{ objEntidad.inIntere13 }}</td>
                                    <td>{{ objEntidad.inIntere14 }}</td>
                                    <td>{{ objEntidad.inIntere15 }}</td>
                                    <td>{{ objEntidad.inIntere16 }}</td>
                                    <td>{{ objEntidad.inIntere17 }}</td>
                                    <td>{{ objEntidad.inIntere18 }}</td>
                                    <td>{% if objEntidad.fhCreacion %}{{ objEntidad.fhCreacion|date('d-m-Y H:i:s') }}{% endif %}</td>
                                    <td>{% if objEntidad.fhActualizacion %}{{ objEntidad.fhActualizacion|date('d-m-Y H:i:s') }}{% endif %}</td>
                                    <td> 
                                        <a href="{{ path('pgDviBaremo_mostrar', { 'id': objEntidad.coDviBaremo, 'blnBandera': '0' }) }}" class="btn btn-xs" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Mostrar detalle">
                                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                        </a>                                    
                                        <a href="{{ path('pgDviBaremo_editar', { 'id': objEntidad.coDviBaremo }) }}" class="btn btn-xs" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Editar">
                                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                        </a>                                 
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="row">                        
                        <div class="col-sm-9 col-md-6 col-lg-8">
                            <p> <strong>Resultado: </strong>{{ objPagina.getTotalItemCount }} filas</p>
                        </div>
                        <div class="col-sm-3 col-md-6 col-lg-4 pull-right">
                            {{ knp_pagination_render(objPagina) }}
                        </div>
                    </div>                    
                </fieldset>   
    {% endblock %}{#-- Fin Campos de la Forma #}