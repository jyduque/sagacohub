{% extends '::plantilla.html.twig' %}

{% block id 'orientador' %}
   
    {% block ruta %}
    <div class="container navbar-blanca">                
        <ul class="breadcrumb-modi">
            <li><a href="#"><small>Inicio</small></a></li>
            <li><a href="{{ path('pgOrientador') }}"><small>Orientador</small></a></li>
            <li class="active"><small>Crear</small></li>
        </ul>                              
    </div> 
    {% endblock %}{#-- Fin Barra de ruta --#}
    
    {# Campos de la Forma #}
    {% block twigformulario %}        
        <fieldset>
            {# Titulo del requisito #}
            <legend>Crear orientador
                <div class="pull-right">
                    <a href="{{ path('pgOrientador') }}" class="btn btn-xs" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Regresar al listado">
                        <span class="glyphicon glyphicon-hand-left" aria-hidden="true"></span>
                    </a>                       
                </div>
            </legend>
            {#Muestra los campos del formulario#}      

            {{ form_start(form, { 'style': 'horizontal' }) }}
                {{ form_errors(form, { 'global_errors': true }) }}
                {{ form_row(form._token) }}
                {{ form_row(form.txProfesion, {'label': 'Profesi√≥n'}) }}                    
                {{ form_row(form.txCarrerAtendida, {'label': 'Carrera atendida'}) }}
                {{ form_row(form.txPeriodVigencia, {'label': 'Periodo de vigencia'}) }}                    
                {{ form_row(form.txComentario, {'label': 'Comentario'}) }}
                {{ form_row(form.coRecursHumano, {'label': 'Nombre del orientador'}) }}
                <div>
                    <p class="text-left">
                        <small class="text-muted">(</small><small class="text-muted text-danger">*</small><small class="text-muted">) Campos obligatorios</small></p>
                </div>
            {{ form_end(form) }}                
        </fieldset>
    {% endblock %}{#-- Fin Campos de la Forma #}
