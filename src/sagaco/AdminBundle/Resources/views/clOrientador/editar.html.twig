{% extends '::plantilla.html.twig' %}

{% block id 'orientador' %}
    
    {% block ruta %}
    <div class="container navbar-blanca">                
        <ul class="breadcrumb-modi">
            <li><a href="#"><small>Inicio</small></a></li>
            <li><a href="{{ path('pgOrientador') }}"><small>Docente</small></a></li>
            <li class="active"><small>Actualizar</small></li>
        </ul>                              
    </div> 
    {% endblock %}{#-- Fin Barra de ruta --#}
   
    {# Campos de la Forma #}
    {% block twigformulario %}
        
        <fieldset>
            {# Titulo del requisito #}
            <legend>Actualizar docente
                <div class="pull-right">
                    {{ form(delete_form) }}
                </div> 
                <div class="pull-right">
                    <a href="{{ path('pgOrientador') }}" class="btn btn-xs" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Regresar al listado">
                        <span class="glyphicon glyphicon-hand-left" aria-hidden="true"></span>                            
                    </a> 
                        <i class="fa fa-pencil-square-o"></i>
                </div>                
            </legend>

            {#Muestra los campos del formulario#}  
            {{ form_start(edit_form, { 'style': 'horizontal' }) }}
                {{ form_errors(edit_form, { 'global_errors': true }) }}
                {{ form_row(edit_form._token) }}
                {{ form_row(edit_form.txProfesion, {'label': 'Profesi√≥n'}) }}                    
                {{ form_row(edit_form.txPeriodVigencia, {'label': 'Periodo de vigencia'}) }}
                {{ form_row(edit_form.txComentario, {'label': 'Comentario'}) }}                    
                {{ form_row(edit_form.coRecursHumano, {'label': 'Docente'}) }} 
                {{ form_row(edit_form.coCarrera, {'label': 'Cambio de especialidad'}) }}
                <div>
                    <p class="text-left">
                        <small class="text-muted">(</small><small class="text-muted text-danger">*</small><small class="text-muted">) Campos obligatorios</small></p>
                </div>                    
            {{ form_end(edit_form) }}                    
        </fieldset>      
    {% endblock %}{#-- Fin Campos de la Forma #}

