{% extends '::plantilla.html.twig' %}

{% block id 'dviarea' %}
    {# Barra de ruta #}
    {% block ruta %}
    <div class="container navbar-blanca">                
        <ul class="breadcrumb-modi">
            <li><a href="#"><small>Inicio</small></a></li>
            <li class="active"><small>DVI area</small></li>
        </ul>                              
    </div> 
    {% endblock %}{#-- Fin Barra de ruta --#}
   
    {# Campos de la Forma #}
    {% block twigformulario %}
        <fieldset>
                {# Titulo del requisito #}
                <legend>Listar DVI area
                    <div class="pull-right">
                        <a href="{{ path('pgDviArea_registrar') }}" class="btn btn-xs" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Crear">
                            <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                        </a>                          
                    </div>
                </legend>
                {{ bootstrap_set_style('horizontal') }}
    
                {#Muestra los campos del formulario#} 
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-condensed">
                            <thead>                            
                                <tr>
                                    {# sorting of properties based on query components #}
                                    <th>{{ knp_pagination_sortable(objPagina, 'Id', 'a.coDviArea') }}</th>
                                    <th{% if objPagina.isSorted('a.nbDviArea') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(objPagina, 'DVI Area', 'a.nbGrupoRol') }}</th>
                                    <th>F. Creación</th>
                                    <th>F. Actualización</th>
                                    <th>Acción</th>                                
                                </tr>
                            </thead>
                            <tbody>
                            {% for objEntidad in objPagina %}
                                <tr {% if loop.index is odd %}class="color"{% endif %}>
                                    <td class="text-right"><a href="{{ path('pgDviArea_mostrar', { 'id': objEntidad.coDviArea, 'blnBandera': '0'}) }}">{{ objEntidad.coDviArea }}</a></td>
                                    <td>{{ objEntidad.nbDviArea }}</td>
                                    <td>{% if objEntidad.fhCreacion %}{{ objEntidad.fhCreacion|date('d-m-Y H:i:s')}}{% endif %}</td>
                                    <td>{% if objEntidad.fhActualizacion %}{{ objEntidad.fhActualizacion|date('d-m-Y H:i:s')}}{% endif %}</td>
                                    <td> 
                                        <a href="{{ path('pgDviArea_mostrar', { 'id': objEntidad.coDviArea, 'blnBandera': '0' }) }}" class="btn btn-xs" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Mostrar detalle">
                                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                        </a>                                    
                                        <a href="{{ path('pgDviArea_editar', { 'id': objEntidad.coDviArea }) }}" class="btn btn-xs" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Editar">
                                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                        </a>                                 
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="row">                        
                        <div class="col-sm-9 col-md-6 col-lg-8">
                            <p> <strong>Resultado: </strong>{{ objPagina.getTotalItemCount }} filas</p>
                        </div>
                        <div class="col-sm-3 col-md-6 col-lg-4 pull-right">
                            {{ knp_pagination_render(objPagina) }}
                        </div>
                    </div>                    
                </fieldset>   
    {% endblock %}{#-- Fin Campos de la Forma #}